@model Evaluation_ASPNET_TECHNOBOOK.Models.FilForm
@using Evaluation_ASPNET_TECHNOBOOK.Infrastructure

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <br />
        <span>Bienvenue sur votre profil | @SessionManager.Users.Nom @SessionManager.Users.Prenom</span>
    </div>
    <div class="form-horizontal">
        <h4>Accueil TechnoBook</h4>
        <hr />
        <div>
            <div class="row">
                <div class="col-md-6">
                    <h2>Votre fil d'actualité</h2>
                    <p>
                        C'est ici que vous pouvez interragir avec l'ensemble de vos amis
                    </p>
                </div>
                <div class="alert alert-warning alert-warning col-md-6">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h2>Partagez vos pensée</h2>
                        <p>
                            Vous pouvez exposez vos pensé avec l'ensemble des utilisateurs.
                        </p>
                        <p>
                            Une fois votre message posté celui ci sera visible par vous et vos amis.
                        </p>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Envoyer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

