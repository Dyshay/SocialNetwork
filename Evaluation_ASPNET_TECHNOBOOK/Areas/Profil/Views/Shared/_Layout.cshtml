@using Evaluation_ASPNET_TECHNOBOOK.Infrastructure;
@using Model.Client.Service;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechnoBook - Réseau social</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TechnoBook", "Index", "Member", new { area = "Profil" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (SessionManager.Users != null)
                    {

                        <li>@Html.ActionLink("Actualité", "Feed", "Member")</li>
                        <li>@Html.ActionLink("Votre profil", "Update", "Member")</li>
                        <li>@Html.ActionLink("Recherche", "Search", "Member")</li>
                        <li>@Html.ActionLink("Demande d'amis", "DemandeAmis", "Member")</li>
                        <li>@Html.ActionLink("Liste d'amis", "Amis", "Member")</li>
                    }
                </ul>
                    @if(SessionManager.Users != null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="item active">@Html.ActionLink("Deconnexion", "Logout", "Member", new { area = "Profil" }, null)</li>
                        </ul>
                    }

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TechnoBook - Le Site de références pour les étudiants</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>